&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;          treemacs-no-png-images                 &lt;span style=&#34;color:#66d9ef&#34;&gt;nil&lt;/span&gt;
